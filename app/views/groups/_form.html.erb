<div class="panel panel-default">
 <div class="panel-body">
    <div class="row">
      <div class="col-md-12 lead">New Group<hr></div>
    </div>
    <div class="row"> 
      <%= form_for(group) do |f| %>
        <% if group.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

            <ul>
            <% group.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group row col-xs-offset-1">
          <%= f.label :title, :class=>"col-xs-2 col-form-label" %>
          <div class="col-xs-10">
            <%= f.text_area :title, :class=>"form-control", :id=>"exampleTextarea", :rows=>"1" %>
          </div>
        </div>

        <div class="form-group row col-xs-offset-1">
          <%= f.label :location, :class=>"col-xs-2 col-form-label" %>
          <div class="col-xs-10">
            <%= f.text_area :location, :class=>"form-control", :id=>"exampleTextarea", :rows=>"1" %>
          </div>
        </div>

        <div class="form-group row col-xs-offset-1">
          <%= f.label :group_image, :class=>"col-xs-2 col-form-label" %><br />
          <%= f.file_field :group_image %>
        </div>

        <div class="form-group row col-xs-offset-1">
          <%= f.label :description, :class=>"col-xs-2 col-form-label" %>
          <div class="col-xs-10">
            <%= f.text_area :description, :class=>"form-control", :id=>"exampleTextarea", :rows=>"3" %>
          </div>
        </div>

        <div class="actions" id="update-role">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="col-md-12" id="main-container">
  
  <div class="row">
    <button type="button" id="likes" class="btn btn-secondary">Most Likes</button>
    <button type="button" id="recent" class="btn btn-secondary">Most Recent Event</button>
  </div>

  <div class="row events" id="events-cards">
    <% @events.each do |event| %> 
      <div class="col-xs-6 col-md-4 col-lg-3 for-search" data-searchstring="<%= event.tags.pluck(:name).join(' ') %> <%= event.location %> <%= event.title%>" data-added="<%= event.end_date %>" data-likes="<%= event.get_upvotes.size %>">
        <div id="box-3" class="box">
          <%= link_to image_tag(event.event_image.thumb.url), event %>
          <span class="caption fade-caption">
            <div class="card-interest">
                <%= event.tags.first.name %> 
            </div>
            <div class="card-content">
              <p><span class="time-remianing"><%=distance_of_time_in_words(event.end_date, Time.now) %> Remaining</span></p>
              <div class="card-title">
                <h3><%=link_to event.title, event %></h3>
              </div>
              <div class="activity-mini">
                <i class="glyphicon glyphicon-comment text-muted white"></i> <%= event.comments.size %>
              </div>
              <div class="activity-mini">
                <i class="glyphicon glyphicon-thumbs-up text-muted white"></i><%= event.get_upvotes.size %>
              </div>
            </div>
          </span>
        </div>
      </div>
    <% end %>
  </div>
</div>


